#include<stdio.h>

////////////////////////////////////////////////////////////////////////////
//
//  Function Name :    
//  Description   :    Given two Number from user and disaplay on screen
//                     bitween that both number Range reverse order.
//  Input         :    Integer
//  Output        :    Integer
//  Author        :    Satyajeet Manohar Ghule
//  Date          :    27/10/2025
//
////////////////////////////////////////////////////////////////////////////

int EvenNumber(int iNo)
{
    int iCnt = 0;
    if(iNo <= 0)
    {
        iNo = -iNo;
    }
    for(iCnt = 1; iCnt <= iNo; iCnt++)
    {
        if(iCnt % 2 == 0)
        {
            printf("%d\t",iCnt);
        }
    }
    return iCnt;
}
////////////////////////////////////////////////////////////////////////////
//
//  Entry point Function for the Application
//
////////////////////////////////////////////////////////////////////////////

int main()
{
    int iValue = 0, iRet = 0;

    printf("Enter a number :\n");
    scanf("%d",&iValue);

    iRet = EvenNumber(iValue);
    return 0;
}
